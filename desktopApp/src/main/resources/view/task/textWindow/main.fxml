<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import kurlyk.view.components.MyHtmlEditor?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kurlyk.view.task.textWindow.TextController">
    <ScrollPane>
        <HBox>
            <MyHtmlEditor fx:id="textArea" HBox.hgrow="ALWAYS">

            </MyHtmlEditor>
        </HBox>
    </ScrollPane>
    <VBox fx:id="root" alignment="TOP_CENTER">
        <TextArea fx:id="inputArea" VBox.vgrow="ALWAYS"/>
    </VBox>
    <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <Button fx:id="submit" text="Ответ">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </HBox>
</VBox>
